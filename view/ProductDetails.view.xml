<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="leverx.app.controller.ProductDetails">
	<Page
		title="Product details"
		showNavButton="true"
		navButtonPress="onProductNavBack">
		<ObjectHeader
			title="{odata>name}"
			backgroundDesign="Solid">
				<attributes>
					<ObjectAttribute
						text="Quantity {odata>quantity}, price {odata>price}"/>
					<ObjectAttribute
						title="Total price"
						text="{odata>totalPrice} {odata>currency}"/>
				</attributes>
		</ObjectHeader>
		<FlexBox
			class="sapUiSmallMarginTopBottom"
			alignItems="Center">
			<Text text="Author name: " />
			<Input placeholder="Enter name"/>
			<Text text="Rating: "/>
			<RatingIndicator id="RI_default" maxValue="5" value="0" tooltip="Rating Tooltip" />
		</FlexBox>
			<FeedInput
				post="onPost"
				showIcon="true" />
	</Page>
</mvc:View>
