<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core" >
	<Dialog
		id="ProductDialog"
		title="Produc form">
		<f:SimpleForm
			id="productForm"
			maxContainerCols="1"
			layout="ResponsiveGridLayout"
			labelSpanL="12"
			labelSpanM="12"
			emptySpanL="0"
			emptySpanM="0"
			columnsL="1"
			columnsM="1">
			<f:content>
				<Label text="Name"/>
				<Input value="{oProduct>/name}"/>

				<Label text="Price"/>
				<Input value="{oProduct>/price}"/>

				<Label text="Quantity"/>
				<Input value="{oProduct>/quantity}"/>

				<Label text="Total price"/>
				<Input value="{oProduct>/totalPrice}"/>
			</f:content>
		</f:SimpleForm>

		<buttons>
			<Button text="Send" press="onSendProductPress"/>
			<Button text="Close" press="onCloseDialogPress"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>
